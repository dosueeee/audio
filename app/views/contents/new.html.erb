  <%= form_for @content, :url => {:action => 'create'} do |f| %>
    <div class="ui segment">
      <h3 class="ui">audio_title</h3>
      <%= f.text_field :audio_title %>
      <!-- <input type="text" name="audio_title"> -->
      <h3 class="ui">media_name</h3>
      <!-- <input type="text" name="media_name"> -->
      <%= f.text_field :media_name %>
      <h3 class="ui">media_url</h3>
      <%= f.text_field :media_url %>
      <!-- <input type="text" name="media_url" size="60"> -->
      <h3 class="ui">audio_image</h3>
      <%= f.text_field :audio_image %>
      <!-- <input type="text" name="audio_image"> -->
